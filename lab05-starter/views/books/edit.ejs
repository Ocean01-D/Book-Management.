<%- include('../partials/header') %>
<main>
  <h2>Edit New Book</h2>
  <form method="POST" action="/books/<%= book._id %>?_method=PUT">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= book.title %>" required>
    </div>
    <div>
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="<%= book.author %>" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
    <!-- Insert your code here -->
    <div>
      <label for="publishDate">Publish Date:</label>
      <input type="date" id="publishDate" name="publishDate" value="<%= book.publishDate.toISOString().split('T')[0] %>" required>
   </div>
   <div>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="<%= book.genre %>">
 </div>
  <div>
      <label for="publisher">Publishers:</label>
      <input type="text" id="publisher" name="publisher" value="<%= book.publisher %>">
  </div>
  <div>
    <label for="pages">Number of Pages:</label>
    <input type="number" id="pageCount" name="pageCount" value="<%= book.pageCount %>">
  </div>
  <div>
    <label for="Language">Language:</label>
    <input type="text" id="language" name="language" value="<%= book.language %>">
  </div>
  <div>
    <label for="picture"></label>
    <input type="file" id="picture" name="picture" value="<%= book.picture %>">
    <% if (book.picture) { %>
      <img src="<%= book.picture %>">
    <% } %>
  </div>
    
    <button type="submit">Update Book</button>
  </form>
</main>
<%- include('../partials/footer') %>
